  <script>
    // --- Demo data (fan-made, no assets needed) ---
    const TEAM = [
      { name: "Pikachu", type: "electric", desc: "Rapide et malin ‚Äî parfait pour ouvrir le combat.", power: 66, bar: "w2" },
      { name: "Carapuce", type: "water", desc: "D√©fense solide et attaque √† distance.", power: 52, bar: "w2" },
      { name: "Salam√®che", type: "fire", desc: "Un starter fougueux, d√©g√¢ts constants.", power: 40, bar: "" },
    ];

    const DEX = [
      { num: "#025", name: "Pikachu", types:["electric"], desc:"√ânergie pure. Sp√©cialit√© : √©clair rapide." },
      { num: "#007", name: "Carapuce", types:["water"], desc:"Ma√Ætrise l‚Äôeau et encaisse les coups." },
      { num: "#004", name: "Salam√®che", types:["fire"], desc:"Flamme vive, style agressif." },
      { num: "#001", name: "Bulbizarre", types:["grass"], desc:"Contr√¥le du terrain avec lianes et spores." },
      { num: "#150", name: "Mewtwo", types:["psychic"], desc:"Puissance mentale hors normes (teaser)." },
      { num: "#095", name: "Onix", types:["rock"], desc:"Mur de roche. Tr√®s dur √† faire tomber." },
      { num: "#035", name: "M√©lof√©e", types:["fairy"], desc:"Support et utilit√©, tr√®s polyvalent." },
      { num: "#134", name: "Aquali", types:["water"], desc:"Burst eau et r√©g√©n√©ration." },
      { num: "#126", name: "Magmar", types:["fire"], desc:"Pression feu constante, combos br√ªlure." },
    ];

    const byId = (id) => document.getElementById(id);
    const toast = byId('toast');

    function showToast(msg){
      toast.textContent = msg;
      toast.classList.add('show');
      window.clearTimeout(showToast.t);
      showToast.t = window.setTimeout(()=> toast.classList.remove('show'), 2400);
    }

    // --- Render team cards ---
    function renderTeam(list){
      const root = byId('teamCards');
      root.innerHTML = '';
      list.forEach(p => {
        const el = document.createElement('div');
        el.className = 'poke';
        el.innerHTML = `
          <div class="avatar" aria-hidden="true">${p.name[0]}</div>
          <div>
            <h4>${p.name}</h4>
            <p>${p.desc}</p>
          </div>
          <div class="meter" aria-label="Puissance">
            <div class="muted" style="font-size:12px; font-weight:900; text-align:right">${p.power}%</div>
            <div class="bar"><i class="${p.bar}"></i></div>
          </div>
        `;
        root.appendChild(el);
      });
      if(list.length === 0){
        root.innerHTML = `<div class="muted" style="padding:10px 4px; font-weight:800">Aucun r√©sultat. Essayez ¬´ Pika ¬ª, ¬´ Cara ¬ª‚Ä¶</div>`;
      }
    }

    renderTeam(TEAM);

    // --- Quick search (hero mock) ---
    const q = byId('quickSearch');
    q.addEventListener('input', (e) => {
      const val = e.target.value.trim().toLowerCase();
      const filtered = TEAM.filter(p => p.name.toLowerCase().includes(val));
      renderTeam(filtered);
    });

    // --- Render Pok√©dex ---
    function typeLabel(t){
      const map = {
        electric: "√âlectrik",
        water: "Eau",
        fire: "Feu",
        grass: "Plante",
        psychic: "Psy",
        rock: "Roche",
        fairy: "F√©e",
      };
      return map[t] || t;
    }

    function renderDex(filter){
      const root = byId('dexGrid');
      root.innerHTML = '';
      const items = filter === 'all' ? DEX : DEX.filter(p => p.types.includes(filter));

      items.forEach(p => {
        const card = document.createElement('article');
        card.className = 'dexcard';
        card.innerHTML = `
          <div class="row">
            <div class="name">${p.name}</div>
            <div class="num">${p.num}</div>
          </div>
          <div class="types">
            ${p.types.map(t => `<span class="type ${t}">${typeLabel(t)}</span>`).join('')}
          </div>
          <p class="desc">${p.desc}</p>
        `;
        root.appendChild(card);
      });

      if(items.length === 0){
        root.innerHTML = `<div class="muted" style="padding:14px 4px; font-weight:800">Aucun Pok√©mon pour ce filtre.</div>`;
      }
    }

    renderDex('all');

    // --- Chips ---
    document.querySelectorAll('.chip').forEach(btn => {
      btn.addEventListener('click', () => {
        document.querySelectorAll('.chip').forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        renderDex(btn.dataset.filter);
      });
    });

    // --- CTA scroll ---
    byId('scrollDex').addEventListener('click', () => {
      document.querySelector('#dex').scrollIntoView({behavior:'smooth'});
    });

    // --- Modal ---
    const modal = byId('signup');
    byId('openModal').addEventListener('click', () => modal.showModal());
    document.querySelectorAll('[data-open="signup"]').forEach(b => b.addEventListener('click', () => modal.showModal()));
    byId('closeModal').addEventListener('click', () => modal.close());

    byId('demoFill').addEventListener('click', () => {
      byId('name').value = 'Fahmi';
      byId('email').value = 'fahmi@example.com';
      showToast('Auto‚Äërempli ‚ú®');
    });

    byId('submit').addEventListener('click', () => {
      const name = byId('name').value.trim();
      const email = byId('email').value.trim();
      if(!name || !email){
        showToast('Remplis le nom + email');
        return;
      }
      modal.close();
      showToast(`Bienvenue, ${name} ! (d√©mo)`);
    });

    // --- Demo button ---
    byId('openDemo').addEventListener('click', () => {
      showToast('D√©mo : filtre le Pok√©dex et teste le formulaire üëá');
      document.querySelector('#features').scrollIntoView({behavior:'smooth'});
    });

    // --- Copy link ---
    byId('copyLink').addEventListener('click', async () => {
      try{
        await navigator.clipboard.writeText(location.href);
        showToast('Lien copi√© !');
      }catch{
        showToast('Copie impossible (permissions navigateur)');
      }
    });

    // --- Mobile menu (simple) ---
    byId('menuBtn').addEventListener('click', () => {
      const open = document.querySelector('.navlinks').style.display === 'flex';
      document.querySelector('.navlinks').style.display = open ? 'none' : 'flex';
      document.querySelector('.navlinks').style.flexDirection = 'column';
      document.querySelector('.navlinks').style.gap = '6px';
      showToast(open ? 'Menu ferm√©' : 'Menu ouvert');
    });

    // --- Year ---
    byId('year').textContent = new Date().getFullYear();
  </script>
